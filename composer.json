{
  "name": "michalsn/minifier",
  "description": "Assets minification and versioning library for CodeIgniter 4.",
  "keywords": [
      "codeigniter", "minification", "minify", "assets", "codeigniter4", "versioning"
  ],
  "homepage": "https://github.com/michalsn/minifier",
  "authors": [
    {
      "name": "michalsn",
      "homepage": "https://github.com/michalsn",
      "role": "Developer"
    }
  ],
  "license": "MIT",
  "require": {
    "php" : ">=7.3",
    "matthiasmullie/minify": "^1.3",
    "ext-json": "*"
  },
  "minimum-stability": "dev",
  "require-dev": {
    "phpunit/phpunit" : "^8.5",
    "codeigniter4/framework": "^4.1"
  },
  "autoload": {
    "psr-4": {
      "Michalsn\\Minifier\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\Support\\": "tests/_support"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "post-update-cmd": [
      "@composer dump-autoload"
    ]
  }
}
